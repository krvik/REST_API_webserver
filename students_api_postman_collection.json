{
  "info": {
    "name": "Students API (Flask) \u2014 Versioned CRUD",
    "description": "Postman collection for legacy (/students), v1 (/api/v1/students), and v2 (/api/v2/students) endpoints of the Students API. Collection endpoints require a trailing slash.",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:5000"
    },
    {
      "key": "studentId",
      "value": "1"
    }
  ],
  "item": [
    {
      "name": "Health",
      "request": {
        "method": "GET",
        "header": [],
        "url": "{{baseUrl}}/health"
      }
    },
    {
      "name": "Legacy (/students)",
      "item": [
        {
          "name": "List students (legacy)",
          "request": {
            "method": "GET",
            "header": [],
            "url": "{{baseUrl}}/students/"
          }
        },
        {
          "name": "Create student (legacy)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Legacy User\",\n  \"age\": 20,\n  \"course\": \"Math\"\n}"
            },
            "url": "{{baseUrl}}/students/"
          }
        },
        {
          "name": "Get student by id (legacy)",
          "request": {
            "method": "GET",
            "header": [],
            "url": "{{baseUrl}}/students/{{studentId}}"
          }
        },
        {
          "name": "Replace student (PUT, legacy)",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Legacy New\",\n  \"age\": 21,\n  \"course\": \"AI\"\n}"
            },
            "url": "{{baseUrl}}/students/{{studentId}}"
          }
        },
        {
          "name": "Modify student (PATCH, legacy)",
          "request": {
            "method": "PATCH",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"age\": 22\n}"
            },
            "url": "{{baseUrl}}/students/{{studentId}}"
          }
        },
        {
          "name": "Delete student (legacy)",
          "request": {
            "method": "DELETE",
            "header": [],
            "url": "{{baseUrl}}/students/{{studentId}}"
          }
        }
      ]
